# SHGM Exam System Environment Configuration
# Bu dosyayı kendi ayarlarınıza göre düzenleyin

# Application Settings
APP_NAME="SHGM Pilot Exam System"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Europe/Istanbul
APP_LOCALE=tr_TR

# Database Configuration - XAMPP varsayılan ayarları
DB_HOST=localhost
DB_PORT=3306
DB_NAME=shgm_exam_system
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Security Settings - GÜVENLİK İÇİN DEĞİŞTİRİN!
JWT_SECRET=SHGM-2024-SUPER-SECRET-JWT-KEY-CHANGE-THIS-IN-PRODUCTION
JWT_EXPIRY=7200
SESSION_LIFETIME=7200
ENCRYPTION_KEY=SHGM-32-CHARACTER-ENCRYPTION-KEY
HASH_ALGO=sha256

# SHGM API Configuration - GERÇEK DEĞERLERİ SHGM'DEN ALACAKSINIZ
SHGM_API_URL=https://api.shgm.gov.tr
SHGM_API_KEY=your-real-shgm-api-key-here
SHGM_API_SECRET=your-real-shgm-api-secret-here
SHGM_API_VERSION=v1
SHGM_API_TIMEOUT=30

# File Upload Settings
MAX_UPLOAD_SIZE=104857600
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,mp3,mp4,wav
UPLOAD_PATH=storage/uploads/

# Recording Settings
RECORDING_MAX_DURATION=3600
RECORDING_QUALITY=high
RECORDING_FORMAT=webm
RECORDING_PATH=storage/recordings/

# Email Configuration - Gmail örneği (isteğe bağlı)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@shgm.gov.tr
MAIL_FROM_NAME="SHGM Exam System"

# Logging Settings
LOG_LEVEL=debug
LOG_MAX_FILES=30
LOG_PATH=storage/logs/

# AI Integration - OpenAI API (sınav sonrası AI değerlendirme için)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Cache Settings
CACHE_DRIVER=file
CACHE_PATH=storage/cache/
CACHE_LIFETIME=3600

# Backup Settings
BACKUP_PATH=storage/backups/
BACKUP_RETENTION_DAYS=30

# Exam Settings
EXAM_AUTO_SAVE_INTERVAL=30
EXAM_WARNING_TIME=300
EXAM_MAX_ATTEMPTS=3
EXAM_SHUFFLE_QUESTIONS=true
EXAM_SHUFFLE_ANSWERS=true

# System Monitoring
MONITOR_SYSTEM=true
MONITOR_API_CALLS=true
MONITOR_USER_ACTIONS=true